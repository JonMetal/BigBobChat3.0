<UserControl x:Class="Client.ConnectedUsers"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Client"
             mc:Ignorable="d" Width="150" MinHeight="60" MaxHeight="300">

    <Border CornerRadius="6" Background="AliceBlue">
        <Grid MinHeight="60" MaxHeight="300">

            <Ellipse Name="Avatar" Margin="3,6,97,6" Height="50" Width="50">
                <Ellipse.Fill>
                    <ImageBrush x:Name="UserImage" ImageSource="Resources/user.jpg" Stretch="UniformToFill"/>
                </Ellipse.Fill>
            </Ellipse>


            <TextBlock x:Name="NameUser" MaxWidth="237" MinWidth="10" TextWrapping="Wrap" VerticalAlignment="Center" Foreground="#fa007d" FontSize="12" RenderTransformOrigin="0.5,0" Margin="55,5,6,5"><Run Text="Никита Шитлер"/><Run Text=" "/><Run Text="Пасхалкович"/></TextBlock>
            <Ellipse Name="Status" Margin="0,0,6,4" Fill="#55eb34" Height="10" HorizontalAlignment="Right" Width="10" VerticalAlignment="Bottom"/>
        </Grid>
    </Border>

</UserControl>
